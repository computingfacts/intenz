<?xml version="1.0" encoding='iso-8859-1'?>
<web-app version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

  <context-param>
    <param-name>intenz.db.config</param-name>
    <param-value>intenz-db-dev</param-value>
  </context-param>

  <servlet>
    <servlet-name>query</servlet-name>
    <servlet-class>uk.ac.ebi.intenz.webapp.controller.IntEnzHandlerServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet>
	  <servlet-name>contact</servlet-name>
	  <servlet-class>uk.ac.ebi.intenz.webapp.controller.IntEnzContactServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>query</servlet-name>
    <url-pattern>/query</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>contact</servlet-name>
    <url-pattern>/contact</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <error-page>
    <error-code>404</error-code>
    <location>/error.jsp</location>
  </error-page>

  <error-page>
    <error-code>500</error-code>
    <location>/error.jsp</location>
  </error-page>

</web-app>
